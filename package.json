{
  "name": "rastuci",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "please-use-yarn"
  },
  "pnpm": {
    "overrides": {
      "elliptic": "^6.6.0"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@sentry/cli",
      "core-js-pure",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:strict": "eslint 'src/**/*.{ts,tsx}' --quiet",
    "type-check": "npx tsc --noEmit",
    "type-check:watch": "npx tsc --noEmit --watch",
    "check:all": "pnpm type-check && pnpm lint:strict",
    "check:fast": "pnpm type-check && pnpm lint",
    "verify": "pnpm check:all && pnpm test",
    "verify:production": "pnpm check:all && pnpm build && pnpm test",
    "build:check": "pnpm check:all && next build",
    "build:analyze": "ANALYZE=true next build",
    "security:audit": "pnpm audit --prod",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --interactive",
    "clean": "rm -rf .next node_modules .turbo",
    "fresh": "pnpm clean && pnpm install && pnpm prisma:generate",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "docs": "open docs/DEVELOPER_GUIDE.md",
    "db:push": "prisma db push",
    "db:push:prod": "dotenv -e .env.production -- prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:dev": "cross-env SEED_DEV=true tsx prisma/seed.ts --dev",
    "db:seed:admin:dev": "tsx scripts/seed-admin-dev.ts",
    "db:seed:admin:prod": "dotenv -e .env.production -- tsx scripts/seed-admin-prod.ts",
    "db:reset": "prisma migrate reset --force && pnpm db:seed",
    "db:fresh": "pnpm db:reset && pnpm db:seed",
    "seed:admin": "tsx scripts/seed-admin-dev.ts",
    "prisma:migrate-dev": "node scripts/prisma-migrate-dev.js",
    "prisma:generate": "npx prisma generate",
    "test:shipping": "tsx scripts/test-shipping-options.ts",
    "prepare": "husky",
    "fix-hooks": "chmod +x .husky/* && chmod +x .husky/_/*",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@hookform/resolvers": "^3.9.0",
    "@mercadopago/sdk-react": "^1.0.6",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/bundle-analyzer": "^16.0.10",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/client": "6.19.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10",
    "@tailwindcss/postcss": "^4.1.18",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.8",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.8.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.26",
    "jose": "^6.1.3",
    "lucide-react": "^0.561.0",
    "mercadopago": "^2.11.0",
    "nanoid": "^5.1.6",
    "next": "^16.1.6",
    "next-auth": "^4.24.13",
    "next-cloudinary": "^6.17.5",
    "next-themes": "^0.4.6",
    "p-limit": "^7.2.0",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.68.0",
    "recharts": "^3.6.0",
    "resend": "^6.6.0",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.2.7",
    "@storybook/addon-docs": "^10.2.7",
    "@storybook/addon-onboarding": "^10.2.7",
    "@storybook/nextjs": "^10.2.7",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/ui": "^4.0.16",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.4",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-formatter-codeframe": "^7.32.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^26.5.3",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "6.19",
    "storybook": "^10.2.7",
    "strip-ansi": "^7.1.2",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^26.5.6",
    "ts-node": "^1.7.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
